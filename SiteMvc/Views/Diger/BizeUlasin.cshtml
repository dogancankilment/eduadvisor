@{
    ViewBag.Title = Resources.Varsayilan.b_bizimleiletisimegec;
}
<section id="map-overlay">
    <div class="container clearfix">
        <div id="contact-form-overlay" class="clearfix">
            <div class="form-process" id="bize_ulasin_load"></div>
            <div class="fancy-title title-dotted-border">
                <h3>@Resources.Varsayilan.b_bizimleiletisimegec</h3>
            </div>
            <form id="bize_ulasin_form">
                <div class="contact-widget">
                    <div id="bizeulasinbasarili" style="display:none">
                        <div class="alert alert-success col-md-12">
                            <a style="font-size:33px" class="pull-right" href="#" onclick="gorunmezyap(event,bizeulasinbasarili)">&times;</a>
                            <strong>@Resources.Varsayilan.u_mesajgonderildi</strong>
                        </div>
                    </div>
                    <div id="bizeulasinhata" style="display:none">
                        <div class="alert alert-danger col-md-12">
                            <a style="font-size:33px" class="pull-right" href="#" onclick="gorunmezyap(event, bizeulasinhata)">&times;</a>
                            <strong>@Resources.Varsayilan.u_birsorunakarsilasildi</strong>
                        </div>
                    </div>
                    <div class="contact-form-result"></div>
                    <div class="col_full">
                        <label for="template-contactform-name">@Resources.Varsayilan.b_adinizsoyadiniz <small>*</small></label>
                        <input type="text" maxlength="200" id="txt_ad" class="sm-form-control msj-js" name="adi" onblur="BosKontrol(this)">
                    </div>
                    <div class="col_half">
                        <label for="template-contactform-email">@Resources.Varsayilan.bslk_email <small>*</small></label>
                        <input type="email" maxlength="200" id="txt_email" class="sm-form-control msj-js" name="email" onblur="BosKontrol(this)">
                    </div>
                    <div class="col_half col_last">
                        <label for="template-contactform-phone">@Resources.Varsayilan.b_telefon <small>*</small></label>
                        @*<input type="text" id="txt_tel" class="sm-form-control telefon-girilecek msj-js" name="telefon" onblur="BosKontrol(this)">*@
                        <input type="text" id="BizeUlasinTelefon" name="telefon" class="sm-form-control telefon-girilecek msj-js" onblur="BosKontrol(this)" />
                    </div>
                    <div class="clear"></div>
                    <div class="col_full">
                        <label for="template-contactform-subject">@Resources.Varsayilan.b_konu  <small>*</small></label>
                        <input type="text" maxlength="100" id="txt_konu" class="sm-form-control msj-js" name="konu" onblur="BosKontrol(this)">
                    </div>
                    <div class="col_full">
                        <label for="template-contactform-message">@Resources.Varsayilan.b_mesaj <small>*</small></label>
                        <textarea name="mesaj" rows="6" cols="30" id="txt_message" class="sm-form-control msj-js" style="resize: none;" onblur="BosKontrol(this)"></textarea>
                    </div>
                    <div class="col_full">
                        <input type="submit" value="@Resources.Varsayilan.b_gonder" class="button button-3d nomargin" onclick="BizeUlasinGonder(event)">
                    </div>
                </div>
            </form>
            <div class="line"></div>
            <div class="col_one_third nobottommargin">
                <address>
                    <strong>Yerebatan Sarnıcı:</strong><br>
                    Alemdar Mh., Yerebatan Cd. 1/3<br>
                    34410 Fatih/İstanbul<br>
                </address>
            </div>
            <div class="col_two_third col_last nobottommargin">
                <abbr title="@Resources.Varsayilan.b_telefon"><strong>@Resources.Varsayilan.b_telefon:</strong></abbr>
                (91) 8547 632521<br>
                <abbr title="Fax"><strong>@Resources.Varsayilan.b_fax:</strong></abbr>
                (91) 11 4752 1433<br>
                <abbr title="@Resources.Varsayilan.bslk_email"><strong>@Resources.Varsayilan.bslk_email:</strong></abbr>
                info@eduadvisor.com
            </div>
        </div>
    </div>
    <section id="google-map" class="gmap"></section>
</section>

@section sayfa_js{
    <script type="text/javascript" src="https://maps.google.com/maps/api/js?key=AIzaSyDMxJ92oBkSnVNHFX3R8XhtYQPEgk1_IiI"></script>
    <script type="text/javascript" src="~/Content/js/jquery.gmap.js"></script>
    <script type="text/javascript">
        $('#google-map').gMap({
            address: 'Meksiko, Meksiko',
            maptype: 'ROADMAP',
            zoom: 3,
            doubleclickzoom: false,
            controls: {
                panControl: true,
                zoomControl: true,
                mapTypeControl: true,
                scaleControl: false,
                streetViewControl: false,
                overviewMapControl: false
            }
        });
    </script>
    <script src="~/Content/js/jquery.maskedinput.min.js"></script>
}