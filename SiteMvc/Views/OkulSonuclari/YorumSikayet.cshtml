<div class="modal fade" id="YorumSikayetModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-body">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title" id="myModalLabel">@Resources.Varsayilan.b_yorumsikayet</h4>
                </div>
                <div class="form-process" id="yorumsikayet_load"></div>
                <div class="modal-body" id="YorumSikayetModalBody">
                    <div id="result"></div>
                    <label style="margin-bottom:5px">@Resources.Varsayilan.b_sikayetnedeni</label>
                    <table id="rdbYorumSikayetNedenleri" class="rdb" data-toggle="tooltip" style="margin-bottom: 0" data-original-title="" title="">
                        <tbody>
                            @{
                                List<string> nedenler = (List<string>)ViewBag.SikayetNedenleri;
                                for (int i = 0; i < nedenler.Count; i++)
                                {
                                    <tr>
                                        <td>
                                            <input type="radio" name="sikayet_nedeni" id="sikayet_nedeni_@i" value="@nedenler[i]" checked="@(i==0 ? "checked=":"")" onchange="YorumSikayetNedeniChange(event)" />
                                            <label for="sikayet_nedeni_@i">@nedenler[i]</label>
                                        </td>
                                    </tr>
                                }
                            }
                            <tr>
                                <td>
                                    <input type="radio" name="sikayet_nedeni" id="sikayet_nedeni_diger" value="-1" onchange="YorumSikayetNedeniChange(event)" />
                                    <label for="sikayet_nedeni_diger">@Resources.Varsayilan.baslik_diger :</label>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div id="diger_yorum_sikayet_nedeni" style="display:none">
                        <label>@Resources.Varsayilan.b_digersikayetnedeni</label>
                        <textarea id="txtsikayetnedeni_aciklama" class="form-control" rows="2" cols="20"></textarea>
                    </div>
                    <label class="row col-xs-12">@Resources.Varsayilan.b_gecerlisifre</label>
                    <input type="password" id="txt_sikayetSfr" class="form-control" autocomplete="off">
                </div>
                <div class="modal-footer">
                    <input type="submit" value="Kapat" class="btn btn-default" data-dismiss="modal">
                    <input type="submit" value="@Resources.Varsayilan.b_sikayetigonder" onclick="YorumSikayetGonder(event)" id="btnYorumuSikayetEt" class="btn btn-primary">
                </div>
            </div>
        </div>
    </div>
</div>