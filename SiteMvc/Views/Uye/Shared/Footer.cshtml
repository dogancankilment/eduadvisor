                    <li>
                        <i class="icon-angle-right"></i>
                        <a href="@Url.RouteUrl("Footer",new {gozukecek="Misyonumuz"})" title="EduAdvisor @Resources.Varsayilan.misyonumuz">@Resources.Varsayilan.misyonumuz</a>
                    </li>
                    <li>
                        <i class="icon-angle-right"></i>
                        <a href="@Url.RouteUrl("Footer",new { gozukecek="Kullanim-Kosullari" })" title="EduAdvisor @Resources.Varsayilan.kullanim_kosullari">@Resources.Varsayilan.kullanim_kosullari</a>
