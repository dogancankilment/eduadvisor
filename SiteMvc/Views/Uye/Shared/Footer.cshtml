                    </li>
                    <li>
                        <i class="icon-angle-right"></i>
                        <a href="@Url.RouteUrl("Footer",new { gozukecek="Bize-Ulasin" })" title="EduAdvisor @Resources.Varsayilan.bslk_bizeulasin">@Resources.Varsayilan.bslk_bizeulasin</a>
