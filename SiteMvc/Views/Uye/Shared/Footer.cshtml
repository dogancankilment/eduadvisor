                </ul>
            </div>
            <div class="col-md-6 padding0">
                <h3 style="color: #a02f89;">@Resources.Varsayilan.kesfedin</h3>
                <ul>
                    <li>
                        <i class="icon-angle-right"></i>
                        <a href="@Url.RouteUrl("KurumsalKayit", new { tip = "yetkili" })" title="@Resources.Varsayilan.okulunuzu_kaydedin">@Resources.Varsayilan.okulunuzu_kaydedin</a>
                    </li>
                    <li>
                        <i class="icon-angle-right"></i>
                        <a href="@Url.RouteUrl("Footer",new { gozukecek="Sorulan-Sorular" })" title="@Resources.Varsayilan.bslk_sikcasoru">@Resources.Varsayilan.bslk_sikcasoru</a>
