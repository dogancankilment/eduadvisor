@model List<dll.Models.yorum>

<div class="tab-pane" id="tab_yorumlar" style="margin-left: 36px;">
    <div class="form-group col-lg-12">
        <div id="yorumsilmebasarili" style="display:none">
            <div class="alert alert-success">
                <a style="font-size:33px" class="pull-right" href="#" onclick="gorunmezyap(event, yorumsilmebasarili)">&times;</a>
                <i class="icon-gift"></i><strong>@Resources.Varsayilan.u_yorumkaldirildi</strong>
            </div>
        </div>
        <div id="yorumsilmebasarisiz" style="margin-bottom: 20px;display:none">
            <div class="alert alert-danger nobottommargin">
                <a style="font-size:33px" class="pull-right" href="#" onclick="gorunmezyap(event, yorumsilmebasarisiz)">&times;</a>
                <i class="icon-remove-sign"></i><strong>@Resources.Varsayilan.u_yorumsilhata</strong>
            </div>
        </div>
        <div id="profil_yorumlar">
            @if (Model.Count > 0)
            {
                <table class="grd_egitim" cellspacing="0" rules="all" border="1" id="yorumlar_grid" style="border-collapse:collapse;">
                    <tbody>
                        <tr>
                            <th class="templatepadding" scope="col">@Resources.Varsayilan.b_yorumbasligi</th>
                            <th class="templatepadding" scope="col">@Resources.Varsayilan.b_yorumtarihi</th>
                            <th class="templatepadding" scope="col">@Resources.Varsayilan.b_okuladi</th>
                            <th class="templatepadding" scope="col">@Resources.Varsayilan.b_puani</th>
                            <th class="templatepadding" scope="col">@Resources.Varsayilan.b_ressayisi</th>
                            <th class="templatepadding" scope="col">@Resources.Varsayilan.b_yorumdurumu</th>
                            <th class="templatepadding" scope="col">&nbsp;</th>
                        </tr>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td class="itempadding">
                                    <span style="margin-top: 50px">@Model[i].baslik</span>
                                </td>
                                <td class="itempadding">
                                    <span>@Model[i].tarih.ToString("dd/MM/yyyy HH:mm")</span>
                                </td>
                                <td class="itempadding">
                                    <span>@Model[i].okullar.okul_grup_iliski.FirstOrDefault().okul_gruplari.adi</span>
                                    <br />
                                    <small>@Model[i].okullar.adi</small>
                                </td>
                                <td class="itempadding">
                                    <span>@Model[i].puani</span>
                                </td>
                                <td class="itempadding">
                                    <span>@Model[i].yorum_resimleri.Count</span>
                                </td>
                                <td class="itempadding">
                                    <span class="form-control" style="color:@(Model[i].onay == 0 || Model[i].onay== 2 ? "Red" : "Green");">@(Model[i].onay == 0 ? Resources.Varsayilan.b_beklemede : Model[i].onay == 1 ? Resources.Varsayilan.b_onaylandi : Resources.Varsayilan.b_onaylanmadi)</span>
                                </td>
                                <td class="itempadding">
                                    <input type="submit" value="@Resources.Varsayilan.b_detay" onclick="ProfilYorumDetayGoster(@Model[i].id,event);" class="button button-small button-circle button-sistem-yesil" data-v="@Model[i].id">
                                    <input type="submit" value="@Resources.Varsayilan.b_sil" onclick="UyeProfilYorumSil(event,'@Resources.Varsayilan.profil_yorum_sil_onay',@Model[i].id);" class="button button-small button-circle button-red" data-v="@Model[i].id">                                    
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-danger nobottommargin">
                    <i class="icon-gift"></i><strong>@Resources.Varsayilan.u_yorumyokeduara</strong>
                </div>
            }
        </div>
        <div class="form-process" id="profil_yorumlar_load"></div>
    </div>
</div>
<div id="yorum_detay" class="tab-pane" style="margin-left: 36px;">
    
</div>